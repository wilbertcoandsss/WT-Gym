<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">


    <data>
        <variable
            name="viewModel"
            type="edu.bluejack23_1.wtgym.viewmodel.ExercisesViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:fillViewport="true"
        bind:context=".view.MyAccountFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            bind:context=".view.MyAccountFragment">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="267dp"
                android:layout_height="68dp"
                android:fontFamily="@font/sf_bold"
                android:gravity="center"
                android:text="My Account"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.024"
                bind:ignore="RtlCompat" />


            <ImageView
                android:id="@+id/settingsBtn"
                android:layout_width="52dp"
                android:layout_height="51dp"
                android:src="@drawable/baseline_settings_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.59"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.033" />

            <TextView
                android:id="@+id/userIdentity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_bold"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView12"
                app:layout_constraintVertical_bias="0.046" />

            <TextView
                android:id="@+id/userHeight"
                android:layout_width="144dp"
                android:layout_height="76dp"
                android:background="@drawable/rounded_item_list"
                android:fontFamily="@font/sf_bold"
                android:gravity="center"
                android:padding="6dp"
                android:paddingEnd="15dp"
                android:text="175 cm"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.192"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userIdentity"
                app:layout_constraintVertical_bias="0.05"
                bind:ignore="RtlCompat" />

            <TextView
                android:id="@+id/userWeight"
                android:layout_width="144dp"
                android:layout_height="76dp"
                android:background="@drawable/rounded_item_list"
                android:fontFamily="@font/sf_bold"
                android:gravity="center"
                android:padding="8dp"
                android:paddingEnd="15dp"
                android:text="65 kg"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.805"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userIdentity"
                app:layout_constraintVertical_bias="0.05"
                bind:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="39dp"
                android:layout_height="41dp"
                android:src="@drawable/height"
                app:layout_constraintBottom_toBottomOf="@+id/userHeight"
                app:layout_constraintEnd_toEndOf="@+id/userHeight"
                app:layout_constraintHorizontal_bias="0.151"
                app:layout_constraintStart_toStartOf="@+id/userHeight"
                app:layout_constraintTop_toTopOf="@+id/userHeight"
                app:layout_constraintVertical_bias="0.531" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="53dp"
                android:layout_height="58dp"
                android:src="@drawable/weight"
                app:layout_constraintBottom_toBottomOf="@+id/userWeight"
                app:layout_constraintEnd_toEndOf="@+id/userWeight"
                app:layout_constraintHorizontal_bias="0.136"
                app:layout_constraintStart_toStartOf="@+id/userWeight"
                app:layout_constraintTop_toTopOf="@+id/userWeight"
                app:layout_constraintVertical_bias="0.608" />


            <TextView
                android:id="@+id/userBmi"
                android:layout_width="309dp"
                android:layout_height="96dp"
                android:background="@drawable/rounded_item_list"
                android:fontFamily="@font/sf_bold"
                android:gravity="center"
                android:padding="8dp"
                android:paddingEnd="15dp"
                android:text="BMI Score: \n 16.5"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.481"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userHeight"
                app:layout_constraintVertical_bias="0.025"
                bind:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/body"
                app:layout_constraintBottom_toBottomOf="@+id/userBmi"
                app:layout_constraintEnd_toEndOf="@+id/userBmi"
                app:layout_constraintHorizontal_bias="0.094"
                app:layout_constraintStart_toStartOf="@+id/userBmi"
                app:layout_constraintTop_toTopOf="@+id/userBmi"
                app:layout_constraintVertical_bias="0.54" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="309dp"
                android:layout_height="346dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="75dp"
                android:background="@color/dark_input"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userBmi"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/eventLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/sf_regular"
                android:text=""
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.094"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="158dp"
                android:layout_height="141dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.139"
                app:srcCompat="@drawable/user" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>